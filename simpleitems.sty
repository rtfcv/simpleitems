% begin actual environment
  \begin{itemize}%
    \let\@originalitem=\item%
% redefine \item to terminate sub*item
    \renewcommand{\item}{%
      \@EndSubSubSubItem%
      \@EndSubSubItem%
      \@EndSubItem%
      \@originalitem
    }%
%
