      \@BeginSubSubItem%
        \@originalitem
    }%
%
    \newcommand{\subsubsubitem}{%
      \@BeginSubSubSubItem%
        \@originalitem
    }%
}{%
    \@EndSubSubSubItem%
    \@EndSubSubItem%
    \@EndSubItem
  \end{itemize}
% undefine macros
  \let\subitem=\undefined
  \let\subsubitem=\undefined
  \let\subsubsubitem=\undefined
  \let\@BeginSubItem=\undefined
  \let\@EndSubItem=\undefined
